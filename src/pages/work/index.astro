---
import { SITE } from "@config";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Breadcrumbs from "@components/Breadcrumbs.astro";
import LinkButton from "@components/LinkButton.astro";
---

<Layout title={`My Works | ${SITE.title}`}>
  <Header />
  <Breadcrumbs />
  <main id="main-content">
    <section id="about" class="prose mb-28 max-w-3xl prose-img:border-0">
        <h1 class="text-2xl tracking-wider sm:text-3xl">My Works</h1>
        <div class="grid grid-cols-2 gap-4 mt-8">
          <!-- Gallery Item 1 -->
          <div class="relative overflow-hidden rounded-lg">
            <img class="object-cover w-full h-full" src="https://images.pexels.com/photos/249798/pexels-photo-249798.png?auto=compress&cs=tinysrgb&w=600" alt="Work 1">
          </div>
          <!-- Gallery Item 2 -->
          <div class="relative overflow-hidden rounded-lg">
            <img class="object-cover w-full h-full" src="https://images.pexels.com/photos/249798/pexels-photo-249798.png?auto=compress&cs=tinysrgb&w=600" alt="Work 2">
          </div>
          <!-- Add more gallery items as needed -->
        </div>
      </section>
  </main>

  <Footer />
</Layout>


